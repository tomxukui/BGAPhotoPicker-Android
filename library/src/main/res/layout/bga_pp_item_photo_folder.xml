<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bga_pp_selector_item_folder"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/bga_pp_size_level3">

    <cn.bingoogolapple.photopicker.widget.BGAImageView
        android:id="@+id/iv_item_photo_folder_photo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:bga_iv_circle="false"
        app:bga_iv_cornerRadius="3dp"
        app:bga_iv_square="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bga_pp_size_level3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_photo_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#282828"
            android:textSize="@dimen/bga_pp_textSize_level2" />

        <TextView
            android:id="@+id/tv_item_photo_folder_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bga_pp_size_level2"
            android:drawableLeft="@mipmap/bga_pp_ic_folder"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#585858"
            android:textSize="@dimen/bga_pp_textSize_level1" />

    </LinearLayout>

</LinearLayout>